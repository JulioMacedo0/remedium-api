// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@remedium-db:5432/postgres?schema=public"
}

model User {
  id        String      @id @default(uuid())
  username  String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  medicines Medicine[]
  alerts    Alert[]
  expo_token String[]
}

model Medicine {
  id        String      @id @default(uuid())
  name      String
  quantity  Int
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Alert {
  id        String      @id @default(uuid())
  title     String
  subtitle  String
   body      String
  unit_of_measurement unitOfMeasurament
   createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
   user      User     @relation(fields: [userId], references: [id])
  trigger   Trigger?
}

model Trigger {
 id        String      @id @default(uuid())
 type AlertType
 alertId String @unique
 alert Alert @relation(fields: [alertId], references: [id])
 date DateTime?
 last_alert DateTime?
 hours Int?
 minutes Int?
 seconds Int?
 week DayOfWeek[]
 repeats Boolean
}

enum unitOfMeasurament {
  g
  mg
  mcg
  l
  ml
  drops
  units
}

enum DayOfWeek {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

enum AlertType { 
  INTERVAL
  WEEKLY
  DAILY
  DATE
}